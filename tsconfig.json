{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "noEmit": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@application/*": ["application/*"],
      "@domain/*": ["domain/*"],
      "@adapters/*": ["adapters/*"]
    },
  },
  "include": [
    "src/**/*.ts", "src/**/*.spec.ts", "src/**/*.test.ts"
  ]
}
